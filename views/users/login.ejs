<% layout('/layouts/boilerplate') -%>
<div class="row mt-3 mb-3">
    <h3 class="col-6 offset-3">Login to the WanderLust</h3>
    <div class="col-6 offset-3 mt-3">
        <form novalidate class="needs-validation" method="post" action="/login">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" required class="form-control" type="text">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" required class="form-control" type="password">
            </div>
            <button class="btn btn-success mb-3">Login</button>
        </form>
    </div>
</div>
