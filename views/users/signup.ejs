<% layout('/layouts/boilerplate') -%>
<div class="row mt-3 mb-3">
    <h3 class="col-6 offset-3">Signup to get in the WanderLust world..</h3>
    <div class="col-6 offset-3 mt-3">
        <form novalidate class="needs-validation" method="post" action="/signup">
            <div class="mb-3">
                <label for="username" class="form-label">Username</label>
                <input name="username" id="username" required class="form-control" type="text">
                <div class="invalid-feedback">Username must bbe entered properly..</div>
                <div class="valid-feedback">Username looks good..</div>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input name="email" id="email" required class="form-control" type="email">
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <input name="password" id="password" required class="form-control" type="password">
            </div>
            <button class="btn btn-success mb-3">Signup</button>
        </form>
    </div>
</div>
