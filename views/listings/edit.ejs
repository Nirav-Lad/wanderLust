<% layout('/layouts/boilerplate') -%>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h2>Edit your Listing</h2>
            <form method="post" action="/listings/<%= listing._id %>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listings[title]" value="<%= listing.title %>" class="form-control" type="text" required>
                    <div class="invalid-feedback">Title must be entered properly..</div>
                </div>
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listings[description]" class="form-control" required><%= listing.description %></textarea>
                    <div class="invalid-feedback">Description is needed.</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listings[price]" value="<%= listing.price %>" type="number" class="form-control" required>
                        <div class="invalid-feedback">Price must be entered properly.</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listings[country]" value="<%= listing.country %>" type="text" class="form-control" required>
                        <div class="invalid-feedback">Country name is needed.</div>
                    </div>
                </div>
                <div class="mb-3">
                    Original Image<br>
                    <img src="<%= originalImgUrl %>">
                </div>
                <div class="mb-3">
                    <label for="image" class="form-label">Upload new Image</label>
                    <input name="listings[image]" type="file" class="form-control">
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listings[location]" value="<%= listing.location %>" type="text" class="form-control" required>
                    <div class="invalid-feedback">Location must be entered properly..</div>
                </div>
                <button type="submit" class="btn btn-dark mb-3 mt-3 edit-btn">Edit</button>
            </form>
            <br>
        </div>
    </div>
</body>
